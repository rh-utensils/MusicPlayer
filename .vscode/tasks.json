{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build: debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/MusicPlayer.Wasm/MusicPlayer.Wasm.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build: release",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/MusicPlayer.Wasm/MusicPlayer.Wasm.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "-c",
        "Release"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "options": {
        "cwd": "${workspaceFolder}/MusicPlayer.Wasm"
      },
      "isBackground": true,
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/MusicPlayer.Wasm/MusicPlayer.Wasm.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "build: release"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}